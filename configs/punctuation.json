{
  "number": 500,
  "out": "/usr/local/src/data/punctuation/train",
  "seed": "./text_seeds/punctuation_digit.txt",

  "canvas": {
    "height": 64,
    "width": 64
  },

  "font": {
    "min_size": 40,
    "max_size": 62,
    "files": [
      "./fonts/fangsong_GB2312.ttf",
      "./fonts/msyh.ttf",
      "./fonts/simhei.ttf"
    ]
  },


  "interference_ops": [

    {
      "name": "random_stroke",
      "p": 0.3,
      "opt": {
        "bolder": 0.3,
        "plain": 0.0
      }
    },

    {
      "name": "random_resize",
      "p": 0.8,
      "opt": {
        "min_scale": 0.8,
        "max_scale": 1.0
      }
    },

    {
      "name": "random_rotation",
      "p": 0.8,
      "opt": {
        "min_angle": -5,
        "max_angle": 5
      }
    },

    {
      "name": "random_dilution",
      "p": 0.8,
      "opt": {
        "min_ratio": 75,
        "max_ratio": 100
      }
    },

    {
      "name": "padding",
      "p": 1.0,
      "opt": {
        "val": 0
      }
    },

    {
      "name": "random_translation",
      "p": 0.8,
      "opt": {
      }
    },

    {
      "comment": "前景噪点",
      "name": "random_noise",
      "p": 0.0,
      "opt": {
        "rate": 0.003,
        "min_val": 200,
        "max_val": 255
      }
    },

    {
      "comment": "背景噪点",
      "name": "random_noise",
      "p": 0.0,
      "opt": {
        "rate": 0.005,
        "min_val": 0,
        "max_val": 10
      }
    },

    {
      "name": "random_gaussian_blur",
      "comment": "min_r and max_r should be odd numbers",
      "p": 0.8,
      "opt":{
        "min_r": 3,
        "max_r": 3,
        "min_sigma": 0.5,
        "max_sigma": 1.0
      }
    },

    {
      "name": "autobin",
      "p": 1.0,
      "opt":{
        "block": 63
      }
    },

    {
      "name": "inversion",
      "p":1.0,
      "opt":{
      }
    }
  ]
}